
# Root Direction
ESYSIM_ROOT := /media/sf_share/ESYSim

# Linux Command
MAKE   := make
AR     := ar qcv
AROPT  :=
RANLIB := ranlib
RM     := rm -vf
RMDIR  := rm -rvf
MKDIR  := mkdir -p
LN     := ln -s
LNDIR  := ln -s
DIFF   := diff
CS     := ;
MV     := mv -vf
EXEC   := ./

# File system
OEXT := o
DEXT := d
LEXT := a
EEXT :=
X    := /

# dependence, object, binary folder
BUILD_DIR := $(ESYSIM_ROOT)$(X)build
BIN_DIR := $(ESYSIM_ROOT)$(X)bin

# Include 
INC_DIR := -I$(ESYSIM_ROOT)$(X)libs -I$(ESYSIM_ROOT)$(X)libs$(X)netcfg -I$(ESYSIM_ROOT)$(X)libs$(X)tinyxml
LINK_DIR :=
LINK_OBJ := $(BUILD_DIR)$(X)libs$(X)tinyxml$(X)*.$(OEXT) $(BUILD_DIR)$(X)libs$(X)netcfg$(X)*.$(OEXT) $(BUILD_DIR)$(X)libs$(X)*.$(OEXT)

# GNU C/C++ Command
CCPP   := g++
CC     := gcc
OFLAGS := -g -Wall $(LINK_DIR) $(LINK_OBJ)
CFLAGS := -g -Wall $(INC_DIR)



